<style>
  .banner {
    height: 100vh;
  }

  .navbar {
    width: 95%;
    display: flex;
    justify-content: space-between;
    padding: 22px;
    color: #1d4273;
    align-items: center;
    margin: auto;
  }

  .navbar i {
    cursor: pointer;
  }

  .name {
    font-weight: bolder;
    font-size: 25px;
    border: 1px solid black;
  }

  .banner_image {
    width: 100%;
    filter: brightness(50%);
    position: absolute;
    top: 0;
    z-index: -1;
  }

  .text {
    margin: 6% 0px 0px 80px;
    width: 42%;
  }

  .text_title {
    margin: 20px 0;
    color: white;
    font-size: 25px;
  }

  .text_title h1 span {
    color: #8f7367;
  }

  .description {
    color: #ddd;
    font-size: 15px;
    line-height: 23px;
  }

  badge {
    background-color: #092423;
    box-shadow: 0 0 25px #092423;
    font-size: 13px;
    padding: 5px 13px;
    text-align: center;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    gap: 8px;
    font-weight: 500;
    width: 32%;
    border-radius: 50cqh;
    margin: 5px 0px;
  }

  badge i {
    font-size: 8px;
    color: #3a5857;
    text-align: center;
  }

  .button_container {
    margin: 40px 10%;
    display: flex;
    gap: 20px;
  }

  .button {
    padding: 10px 20px;
    border: none;
    font-size: 14px;
    color: #fff;
    border-radius: 7px;
    font-weight: 600;
    text-decoration: none;
    text-transform: uppercase;
    transition: 0.5s;
    transition-property: box-shadow;
  }

  .button {
    background: #092423;
    box-shadow: 0 0 25px #092423;
  }

  .button:hover {
    box-shadow:
      0 0 5px #092423,
      0 0 25px #092423,
      0 0 50px #092423,
      0 0 100px #092423;
  }

  .navbar_list {
    background-color: #8f7367;
    box-shadow: 0 0 25px #8f7367;
    height: 100vh;
    position: absolute;
    top: 0;
    right: 0;
    padding: 90px;
    border-left: 2px solid white;
    opacity: 0;
    visibility: hidden;

    transition:
      opacity 1s,
      visibility 1s;
  }

  .navbar_list nav ul {
    list-style: none;
    text-align: center;
  }

  .navbar_list nav ul li {
    margin: 60px 0;
  }

  .navbar_list nav ul li a {
    color: white;
    text-decoration: none;
  }

  .navbar_list nav ul li a:hover {
    border-bottom: 2px solid white;
  }

  .navbar_icon {
    z-index: 1;
    background-color: #091c38;
    padding: 15px;
    border-radius: 5px;
  }

  .navbar_icon:hover {
    transition: 0.3s ease-in-out;
    box-shadow: 0 0 25px #091c38;
  }
</style>
<script src="../scripts/banner.js"></script>
