---
interface Props {
  title: string;
  descrip: string;
  herramienta_uno: string;
  herramienta_dos: string;
  herramienta_tres: string;
  link?: string;
  fecha: string;
}

const {
  title,
  descrip,
  herramienta_uno,
  herramienta_dos,
  herramienta_tres,
  link,
  fecha,
} = Astro.props;
---

<div class="cards">
  <h1>{title}</h1>
  <span class="descrip">{descrip}</span>

  <div class="herramientas">
    <span>{herramienta_uno}</span>
    <span>{herramienta_dos}</span>
    <span class="grid_dos">{herramienta_tres}</span>
  </div>

  <div class="link">
    <span class="fecha">{fecha}</span>
    <a href={link} target="_blank">
      <i class="fa-solid fa-arrow-up-right-from-square"></i></a
    >
  </div>
</div>

<style>
  h1 {
    color: #8c6961;
    margin: 5px 0;
  }

  .cards {
    background-color: rgb(255 255 255 / 13%);
    border: 2px solid rgb(255 255 255 / 50%);
    box-shadow: 0 0 25px rgb(255 255 255 / 20%);
    border-radius: 10px;
    padding: 25px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .herramientas {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    margin: auto;
    gap: 8px;
  }

  .herramientas span {
    background-color: rgb(255 255 255 / 4%);
    text-decoration: none;
    color: #ddd;
    padding: 5px;
    border-radius: 20px;
    width: 80px;
    text-align: center;
    font-size: 12px;
  }

  .descrip {
    color: #ddd;
    line-height: 25px;
    font-size: 13px;
    margin-bottom: 10px;
  }

  .link {
    display: flex;
    justify-content: space-between;
    font-size: 13px;
    color: white;
    margin-top: auto;
    margin: 20px 0px 0px 0px;
  }

  a {
    color: #1d4273;
  }
</style>
